# 数据库连接 URL
# PostgreSQL 格式: postgresql://username:password@host:port/database
# 示例: STEAM_WORKSHOP_SYNC_DATABASE_URL=postgresql://postgres:password@localhost:5432/steam_workshop
# 注意: 如果密码包含特殊字符（如 % & 等），需要进行 URL 编码
STEAM_WORKSHOP_SYNC_DATABASE_URL=postgresql://username:password@localhost:5432/steam_workshop

# 需要监控的游戏 ID，可以去Steamdb或者去对应的创意工坊复制
STEAM_WORKSHOP_SYNC_APP_ID="647960"

# 高级设置

# 请求超时时间
STEAM_WORKSHOP_SYNC_TIMEOUT="5"
# 页面间延迟（秒）
STEAM_WORKSHOP_SYNC_PAGE_DELAY="5"
# 循环间延迟（秒）
STEAM_WORKSHOP_SYNC_CYCLE_DELAY="60"

# Steam CMD 下载设置

# Steam CMD 可执行文件路径（默认为 steamcmd，表示在系统 PATH 中）
# Windows 示例: C:\steamcmd\steamcmd.exe 或 ./steamcmd/steamcmd.exe
# Linux/macOS 示例: /usr/local/bin/steamcmd 或 steamcmd
STEAM_WORKSHOP_SYNC_STEAMCMD_PATH="steamcmd"

# Mod 下载目录（默认为 ./downloads）
STEAM_WORKSHOP_SYNC_DOWNLOAD_DIR="./downloads"

# Steam 账号设置（可选，默认使用匿名登录）
# 如果需要登录账号才能下载某些 mod，请设置用户名和密码
STEAM_WORKSHOP_SYNC_STEAM_USERNAME="anonymous"
STEAM_WORKSHOP_SYNC_STEAM_PASSWORD=""
# Steam Guard 验证码（如果账号启用了 Steam Guard）
STEAM_WORKSHOP_SYNC_STEAM_GUARD_CODE=""